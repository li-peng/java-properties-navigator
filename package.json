{
  "name": "java-properties-definition",
  "displayName": "Java Properties Definition",
  "description": "Jump from Java code strings to properties file definitions",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/your-repo-name.git"
  },
  "categories": [
    "Programming Languages",
    "Other"
  ],
  "activationEvents": [
    "onLanguage:java",
    "onLanguage:yaml",
    "onCommand:java-properties-definition.jumpToProperty",
    "onCommand:java-properties-definition.jumpToPropertyShortcut",
    "onCommand:java-properties-definition.rebuildIndex",
    "onCommand:java-properties-definition.testYamlParsing",
    "onCommand:java-properties-definition.findUsages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "java-properties-definition.jumpToProperty",
        "title": "Jump to Property"
      },
      {
        "command": "java-properties-definition.jumpToPropertyShortcut",
        "title": "Jump to Property (Shortcut)"
      },
      {
        "command": "java-properties-definition.rebuildIndex",
        "title": "Rebuild Properties Index"
      },
      {
        "command": "java-properties-definition.testYamlParsing",
        "title": "Test YAML Property Parsing"
      },
      {
        "command": "java-properties-definition.findUsages",
        "title": "Find Property Usages"
      }
    ],
    "configuration": {
      "title": "Java Properties Definition",
      "properties": {
        "java-properties-definition.scanDirectories": {
          "type": "array",
          "default": [
            "src/main/resources",
            "**/src/main/resources",
            "**/**/src/main/resources"
          ],
          "description": "Directories to scan for properties files"
        },
        "java-properties-definition.excludePatterns": {
          "type": "array",
          "default": [],
          "description": "Patterns to exclude from scanning"
        },
        "java-properties-definition.fileExtensions": {
          "type": "array",
          "default": [
            ".properties",
            ".yml",
            ".yaml"
          ],
          "description": "File extensions to include in scanning"
        },
        "java-properties-definition.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostics for undefined property keys"
        },
        "java-properties-definition.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show status bar item"
        },
        "java-properties-definition.autoRebuildOnConfigChange": {
          "type": "boolean",
          "default": true,
          "description": "Automatically rebuild index when configuration files change"
        },
        "java-properties-definition.enableDoubleClickJump": {
          "type": "boolean",
          "default": false,
          "description": "Automatically jump to property definition when double-clicking a string"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == java && editorHasSelection",
          "command": "java-properties-definition.jumpToProperty",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "java-properties-definition.jumpToPropertyShortcut",
        "key": "alt+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorLangId == java"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@vscode/debugadapter": "^1.66.0",
    "@vscode/debugprotocol": "^1.66.0",
    "yaml": "^2.4.5",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.5",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.0",
    "@types/vscode": "^1.60.0",
    "glob": "^7.1.7",
    "mocha": "^8.0.0",
    "typescript": "^4.9.5",
    "vscode-test": "^1.5.0"
  }
}
